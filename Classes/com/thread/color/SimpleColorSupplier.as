package com.thread.color{	import com.thread.color.IColorSupplier;	import com.thread.vo.IRandomizable;	import com.util.CloneUtil;	import com.util.Randomizer;	/**	 * @author plemarquand	 */	public class SimpleColorSupplier implements IColorSupplier, IRandomizable	{		private var _color : int;		public function SimpleColorSupplier(color : int = 0xff0000)		{			_color = color;		}		public function update() : void		{		}		public function copy() : IColorSupplier		{			return CloneUtil.clone( this );		}		public function get currentColor() : uint		{			return _color;		}		public function set currentColor(col : uint) : void		{			_color = col;		}		public function get framesPerColor() : uint		{			return 0;		}		public function set framesPerColor(n : uint) : void		{		}		public function randomize() : void		{			var randomizer : Randomizer = new Randomizer();			randomizer.addRule( uint, "currentColor", 0, 0xffffff );			randomizer.randomize( this );		}	}}